<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMemberPCPInformation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" 
    android:background="@color/white"
    android:typeface="sans"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" 
        android:typeface="sans"
        >

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/provider_contact_information"
            android:textSize="20sp" 
            android:gravity="center"
            android:textColor="@color/black"
            android:typeface="sans"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:shrinkColumns="1"
            android:stretchColumns="1"
            tools:ignore="UselessParent"
            android:typeface="sans"
             >

           

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:background="@drawable/upper_textbox"
                 android:typeface="sans"
                 >

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/name"
                    android:textSize="18sp" 
                    android:typeface="sans"
                   />

                <TextView
                    android:id="@+id/txtNameData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:typeface="sans"
                     />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                 android:background="@drawable/middle_text_box"
                 android:typeface="sans"
                >

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/email" 
                    android:textSize="18sp"
                    android:typeface="sans"
                    />

                <TextView
                    android:id="@+id/txtEmailData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:typeface="sans"
                     />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:background="@drawable/lower_text_box"
                 android:typeface="sans"
                 >

                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/phone_no" 
                    android:textSize="18sp"
                    android:typeface="sans"
                    />

                <TextView
                    android:id="@+id/txtPhoneData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="18sp" 
                    android:typeface="sans"
                    />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/office_hours"
            android:orientation="vertical"
            tools:ignore="UselessParent"
            android:typeface="sans"
             >

            <TextView
                android:id="@+id/txtOfficeHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:text="@string/office_hours"
                android:textSize="20sp" 
                android:typeface="sans"
                />

            <TextView
                android:id="@+id/txtOfficeHoursData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="5dp"
                android:textSize="18sp" 
                android:typeface="sans"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/other_notes"
            android:orientation="vertical"
            tools:ignore="UselessParent"
            android:typeface="sans"
             >

            <TextView
                android:id="@+id/txtOtherNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:text="@string/other_notes"
                android:textSize="20sp"
                android:typeface="sans"
                 />

            <TextView
                android:id="@+id/txtOtherNotesData"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="left"
                android:padding="5dp" 
                android:textSize="18sp"
                android:typeface="sans"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>