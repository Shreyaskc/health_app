<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/findProviderLayout"
     >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:typeface="sans"
        >

        <ListView
            android:id="@+id/listFindProvider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:background="@drawable/normalfield_back"
            android:divider="@color/listview_divider"
            android:dividerHeight="2dp"
            android:padding="5dp" 
            android:typeface="sans"
            >
        </ListView>

        <RelativeLayout
            android:id="@+id/policyLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_margin="10dp"
            android:padding="7dp" >

            <TextView
                android:id="@+id/policy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text="@string/policy"
                android:textColor="@color/provider_text" 
                android:typeface="sans"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/policy"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtTermsOfUse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/terms_of_use"
                    android:textColor="@color/provider_text" 
                    android:typeface="sans"
                    />

                <View
                    android:id="@+id/verticalLine"
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:background="#B6B6B6" 
                    android:typeface="sans"
                    />

                <TextView
                    android:id="@+id/txtPrivacyPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/provider_text" 
                    android:typeface="sans"
                    />

                <View
                    android:id="@+id/verticalLine1"
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:background="#B6B6B6" 
                    android:typeface="sans"
                    />

                <TextView
                    android:id="@+id/txtSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/switch_to_full_site"
                    android:textColor="@color/provider_text" 
                    android:typeface="sans"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>