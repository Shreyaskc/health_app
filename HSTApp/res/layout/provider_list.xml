<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/searchLayout"
    android:background="@color/provider_bg" 
    android:typeface="sans">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:typeface="sans">

        <RelativeLayout
            android:id="@+id/searchLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_margin="10dp"
            android:padding="7dp" 
            android:typeface="sans">

            <Button 
                android:id="@+id/btnMapResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_results"
                android:layout_alignParentLeft="true"
               android:typeface="sans"
                />
             <Button 
                android:id="@+id/btnRefineSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refine_results"
               android:layout_alignParentRight="true"
              android:typeface="sans"
                />
        </RelativeLayout>
         <ListView
            android:id="@+id/listFindProvider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
          android:typeface="sans"
            android:background="@drawable/normalfield_back"
            android:divider="@color/listview_divider"
            android:dividerHeight="2dp"
            android:padding="5dp" >
        </ListView>
    </LinearLayout>

</RelativeLayout>